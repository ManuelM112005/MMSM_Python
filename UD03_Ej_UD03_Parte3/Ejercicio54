import time
segundos = 0
minutos = 0
horas = 0
try:
    while True:
        print(f"{horas:02d}:{minutos:02d}:{segundos:02d}", end="\r")
        time.sleep(1)
        segundos += 1
        if segundos == 60:
            segundos = 0
            minutos += 1
        if minutos == 60:
            minutos = 0
            horas += 1
except KeyboardInterrupt:
    print("\nCron√≥metro detenido.")