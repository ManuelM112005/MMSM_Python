cantidad = int(input("Introduce la cantidad de números a introducir: "))
mayores = 0
menores = 0
iguales = 0
for i in range(cantidad):
    num = float(input("Introduce un número: "))
    if num > 0:
        mayores += 1
    elif num < 0:
        menores += 1
    else:
        iguales += 1
print("Mayores que 0:", mayores)
print("Menores que 0:", menores)
print("Iguales a 0:", iguales)