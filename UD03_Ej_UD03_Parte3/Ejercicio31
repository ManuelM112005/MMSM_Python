num_alumnos = int(input("Introduce el número de alumnos: "))
if num_alumnos >= 100:
    costo_por_alumno = 65
    total = num_alumnos * costo_por_alumno
elif 50 <= num_alumnos <= 99:
    costo_por_alumno = 70
    total = num_alumnos * costo_por_alumno
elif 30 <= num_alumnos <= 49:
    costo_por_alumno = 95
    total = num_alumnos * costo_por_alumno
else:
    costo_por_alumno = 4000 / num_alumnos
    total = 4000
print("Costo por alumno:", costo_por_alumno)
print("Total a pagar a la compañía:", total)