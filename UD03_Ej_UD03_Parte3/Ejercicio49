total_horas = 0
for dia in range(1, 7):
    horas = float(input(f"Introduce las horas trabajadas el d√≠a {dia}: "))
    total_horas += horas
sueldo_por_hora = float(input("Introduce el sueldo por hora: "))
sueldo_total = total_horas * sueldo_por_hora
print("Total de horas:", total_horas)
print("Sueldo total:", sueldo_total)
