# Leer dos números
num1 = float(input("Introduce el primer número: "))
num2 = float(input("Introduce el segundo número: "))

# Calcular operaciones
suma = num1 + num2
resta = num1 - num2
producto = num1 * num2

# Mostrar resultados
print(f"Suma: {suma}")
print(f"Resta: {resta}")
print(f"Producto: {producto}")

# Manejar división
if num2 != 0:
    division = num1 / num2
    print(f"División: {division:.2f}")
else:
    print(f"División: No se puede dividir entre cero.")
